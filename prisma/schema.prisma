generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DemoRequest {
  id            String   @id @default(uuid())
  email         String?
  name          String?
  hearAboutUs   String?  @map("hear_about_us")
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("demo_requests")
  @@index([email])
  @@index([createdAt(sort: Desc)])
}

